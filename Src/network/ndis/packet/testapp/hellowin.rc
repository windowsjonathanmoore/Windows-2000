      MENUITEM "Send",  IDM_SEND
      MENUITEM "Reset", IDM_RESET
      MENUITEM SEPARATOR
      MENUITEM "About...",IDM_ABOUT
    }

    POPUP    "Filter"
    {
      MENUITEM "None",          IDM_NO_FILTER
      MENUITEM "Directed",      IDM_DIRECTED

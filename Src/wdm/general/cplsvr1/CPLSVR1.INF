GUID_ConstantForce = "{13541C20-8E33-11D0-9AD0-00A0C9A06E35}"
GUID_Sine          = "{13541C23-8E33-11D0-9AD0-00A0C9A06E35}"
GUID_Spring        = "{13541C27-8E33-11D0-9AD0-00A0C9A06E35}"
